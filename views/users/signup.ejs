<% layout("/layouts/boilerplate") %>


    <div class="row mt-3">
        <h1 class="col-sm-6 offset-sm-3">SignUp on Wanderlust</h1>
        <div class="col-sm-6 offset-sm-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <lable for="username" class="form-lable">Username</lable>
                    <input type="text" name="username" id="username" class="form-control" required />
                    <div class="valid-feedback">
                        Looks good
                    </div>
                </div>
                <!-- email -->
                  <div class="mb-3">
                    <lable for="email" class="form-lable">Email</lable>
                    <input type="email" name="email" id="emaail" class="form-control" required />
                  
                </div>
                <!-- password -->
                 <div class="mb-3">
                    <lable for="password" class="form-lable">Password</lable>
                    <input type="password" name="password" id="password" class="form-control" required />
                  
                </div>
                <button class="btn btn-success">SingUp</button>
            </form>
        </div>
    </div>